<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <!-- Globally enables or disables any caches configured in any mapper under this configuration -->
        <setting name="cacheEnabled" value="true"/>
        <!-- Sets the number of seconds the driver will wait for a response from the database -->
        <setting name="defaultStatementTimeout" value="3000"/>
        <!-- Enables automatic mapping from classic database column names A_COLUMN to camel case classic Java property names aColumn -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- Allows JDBC support for generated keys. A compatible driver is required.
        This setting forces generated keys to be used if set to true,
         as some drivers deny compatibility but still work -->
        <setting name="useGeneratedKeys" value="true"/>
    </settings>

    <!-- Continue going here -->

    <typeAliases>
        <typeAlias alias="MemberModel" type="com.fh.taolijie.domain.MemberModel"/>
        <typeAlias alias="RoleModel" type="com.fh.taolijie.domain.RoleModel"/>
        <typeAlias alias="JobPostModel" type="com.fh.taolijie.domain.JobPostModel"/>
        <typeAlias alias="JobPostCategoryModel" type="com.fh.taolijie.domain.JobPostCategoryModel"/>
        <typeAlias alias="ReviewModel" type="com.fh.taolijie.domain.ReviewModel"/>
        <typeAlias alias="SHPostCategoryModel" type="com.fh.taolijie.domain.SecondHandPostCategoryModel"/>
        <typeAlias alias="SHPostModel" type="com.fh.taolijie.domain.SecondHandPostModel"/>
        <typeAlias alias="NewsModel" type="com.fh.taolijie.domain.NewsModel"/>
        <typeAlias alias="ImageResourceModel" type="com.fh.taolijie.domain.ImageResourceModel"/>
    </typeAliases>

    <mappers>
        <mapper resource="mapper/MemberMapper.xml" />
        <mapper resource="mapper/RoleMapper.xml" />
        <mapper resource="mapper/JobPostMapper.xml" />
        <mapper resource="mapper/JobPostCategoryMapper.xml" />
        <mapper resource="mapper/ReviewMapper.xml" />
        <mapper resource="mapper/SHPostCategoryMapper.xml" />
        <mapper resource="mapper/SHPostMapper.xml" />
        <mapper resource="mapper/NewsMapper.xml" />
        <mapper resource="mapper/ImageResourceMapper.xml" />
    </mappers>
</configuration>